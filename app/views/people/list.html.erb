<h1>Listing people</h1>

<table>
  <tr>
    <th>Last</th>
    <th>First</th>
    <th>Pin</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Address</th>
    <th>City</th>
    <th>Region</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.Last %></td>
    <td><%= person.First %></td>
    <td><%= person.Pin %></td>
    <td><%= person.Longitude %></td>
    <td><%= person.Latitude %></td>
    <td><%= person.Address %></td>
    <td><%= person.City %></td>
    <td><%= person.Region %></td>
    <td><%= person.State %></td>
    <td><%= person.Zip %></td>
    <td><%= person.Country %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

